<launch>
    <node 
    pkg="racecar_simulator" 
    exec="simulator" 
    name="racecar_simulator" 
    output="screen">
    </node>
    
    <node
    pkg="rviz2"
    exec="rviz2"
    name="rviz2"
    output="screen">
    <arguments
    >-d $(find-pkg-share racecar_simulator)/launch/simulator.rviz</arguments>
    </node>
</launch>

